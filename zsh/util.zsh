
# edit configs
alias edit="code ~/dots/zsh"
alias ezsh="nvim ~/.zshrc"
alias envim="nvim ~/dots/nvim"

# util
alias rl="omz reload"

# tmux
alias tn='tmux new -s'
alias tk='tmux kill-session'
alias tkk='tmux kill-session -t'
alias ta='tmux attach-session -t'
alias tl='tmux list-sessions'

alias qe="q chat --trust-all-tools --no-interactive"

alias gcai="q chat --trust-all-tools --no-interactive 'Commit all changes in the current Git repository with a commit message specific to the changes.'"
